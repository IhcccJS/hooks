{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@ihccc/hooks": ["src"],
      "@ihccc/hooks/*": ["src/*", "*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*", ".dumirc.ts"],
  "exclude": ["node_modules", "es/**/*", "cjs/**/*", "dist/**/*"]
}
